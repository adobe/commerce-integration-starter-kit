{
  "extends": "@adobe/eslint-config-aio-lib-config",
  "parserOptions": {
    "ecmaVersion": "latest"
  },

  "rules": {
    "node/no-missing-require": ["error", {
      "allowModules": ["@adobe/aio-sk-lib-telemetry"]    
    }]
  },

  "overrides": [
    {
      "files": ["test/**/*.js"],
      "rules": {
        "node/no-unpublished-require": "off",
        "node/no-missing-require": ["error", {
          "allowModules": ["@adobe/aio-sk-lib-telemetry"]
        }]
      }
    }
  ]
}
