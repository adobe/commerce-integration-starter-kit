{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "extends": ["ultracite"],

  "files": {
    "ignoreUnknown": true
  },

  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },

  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "bracketSameLine": true,
      "jsxQuoteStyle": "double",
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },

  "linter": {
    "rules": {
      "style": {
        // This only applies to TypeScript, which we don't use yet.
        "useReadonlyClassProperties": "off"
      },
      "performance": {
        "noNamespaceImport": "off"
      }
    }
  },

  "overrides": [
    {
      "includes": ["scripts/**/*.js"],
      "linter": {
        "rules": {
          "complexity": {
            "noExcessiveCognitiveComplexity": "off"
          },
          "nursery": {
            "useMaxParams": "off"
          },
          "suspicious": {
            // We use console to log information during the onboarding process.
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["actions/**/*.js"],
      "linter": {
        "rules": {
          "nursery": {
            "useMaxParams": "off"
          },
          
          "correctness": {
            // It's a scaffolding, functions are unimplemented (and thus parameters are unused) in purpose.
            "noUnusedFunctionParameters": "off"
          }
        }
      }
    }
  ],

  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              { "type": false, "source": [":BUN:", ":NODE:"] },
              ":BLANK_LINE:",
              {
                "type": false,
                "source": [":PACKAGE:", ":PACKAGE_WITH_PROTOCOL:"]
              },
              ":BLANK_LINE:",
              { "type": false, "source": [":ALIAS:"] },
              ":BLANK_LINE:",
              { "type": false, "source": [":PATH:"] },
              ":BLANK_LINE:",

              { "type": true, "source": [":BUN:", ":NODE:"] },
              {
                "type": true,
                "source": [":PACKAGE:", ":PACKAGE_WITH_PROTOCOL:"]
              },
              { "type": true, "source": [":ALIAS:"] },
              { "type": true, "source": [":PATH:"] }
            ]
          }
        }
      }
    }
  }
}
